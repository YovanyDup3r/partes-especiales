<%- model_class = SpecialPart -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<form class="form-inline" role="form">
    <div class="form-group">
      <input type="text" class="form-control" id="search" placeholder="Buscar Partes Especiales">
    </div>
    <button type="submit" class="btn btn-default">Buscar</button>
  </form>
<div>
  <br>
<table class="table table-striped">
  <thead>
    <!--<tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:video_url) %></th>
      <th><%= model_class.human_attribute_name(:audio_url) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th></th>
    </tr>-->
  </thead>
  <tbody>
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_special_part_path,
            :class => 'btn btn-primary' %>

    <% @special_parts.each do |special_part| %>
      <div class="container">
  <div class="row clearfix">
    <div class="col-md-8 column">
      <div class="row clearfix">
        <div class="col-md-12 column">
          
          <div class="row clearfix">
            <h3> Nombre del Tema:</h3>
            <div class="col-md-2 column">
              <h3>Usuario:</h3> <%= special_part.user.name %>
            </div>
            <div class="col-md-6 column">
              <h3>Iglesia:</h3> <%= special_part.church.name %>
            </div>
            <div class="col-md-4 column">
              <h3>Fecha de Creacion:</h3><%= special_part.created_at %>
            </div>
          </div>
        </div>
      </div>
      <div class="row clearfix">
        <div class="col-md-12 column">
          <h3>Video</h3><%= raw special_part.video_url %>
        </div>
      </div>
      <div class="row clearfix">
        <div class="col-md-12 column">
         <h3>Audio</h3><%= raw special_part.audio_url %>
        </div>
      </div>
    </div>
    <div class="col-md-4 column">
      <h3> Comentarios:</h3> <%= special_part.special_part_users.first.comment unless special_part.special_part_users.first.nil? %>
    </div>
  </div>
    <%=t '.actions', :default => t("helpers.actions") %>
</div>


          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_special_part_path(special_part), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      special_part_path(special_part),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_special_part_path,
            :class => 'btn btn-primary' %>
