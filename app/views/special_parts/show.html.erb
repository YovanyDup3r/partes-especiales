<%- model_class = SpecialPart -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:church_id) %>:</strong></dt>
  <dd><%= @special_part.church_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @special_part.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:video_url) %>:</strong></dt>
  <dd><%= @special_part.video_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:audio_url) %>:</strong></dt>
  <dd><%= @special_part.audio_url %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              special_parts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_special_part_path(@special_part), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              special_part_path(@special_part),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
