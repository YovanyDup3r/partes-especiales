<%= simple_form_for @church, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, input_html: {class: 'form-control'}%>
  <%= f.input :addres, input_html: {class: 'form-control'} %>
  <br>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                churches_path, :class => 'btn btn-default' %>
<% end %>
